!!!Strict
%html
  %head
    %title www.rubychallenge.com puzzle suggestions
    %link{:rel=>"stylesheet", :href=>"/stylesheets/main.css", :type=>"text/css", :media=>"screen, projection"}
    %script{ :src => '/javascripts/jquery-1.3.1.min.js', :type => 'text/javascript' }
    %script{ :src => '/javascripts/ajax.js', :type => 'text/javascript' }
    %script{ :src => '/javascripts/ajaxform.js', :type => 'text/javascript' }


  %body
    #header
      #sticker
        %span#sticker-title Puzzles Ideas:
        %br 
          = Suggestion.all.length
      %div{:style => "float:right; margin-right: 10px; margin-top:15px;"}
        %img{:src => "/images/rc-text.png", :style => "margin-top: 10px;", :width=> "140", :height => "65"}
        %img{:src=>'/images/rc-logo.png', :style=> "margin-top: 10px;",:width => "79", :height => "80"}

      %table#navigation_table
        %tr
          %td
            %dl
              %a{:href => "/"}
                %dd.navigation_text Home
                %dt.navigation_index 
    = yield